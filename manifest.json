{
  "manifest_version": 2,
  "name": "HealthTranslator",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "version": "0.1",
  "icons": { 
    "16": "images/ht_16.png",
    "48": "images/ht_48.png",
    "128": "images/ht_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/ht_19.png",
      "38": "images/ht_38.png"
    }
    //"default_icon": "images/icon.png"
  },
  "web_accessible_resources": [
    "images/loading.gif",
    "fonts/*"
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [ "css/toastr.css"],
      "js": ["js/libs/jquery.min.js", "js/libs/toastr.js", "js/toast.js"]
    }
  ],
  "background": {
    "scripts": ["fancy-settings/source/lib/store.js", "js/libs/jquery.min.js", "js/libs/tuid.js", "js/background.js"],
    "persistent": false
  },
  "options_page": "fancy-settings/source/index.html",
  "options_ui": {
    "page": "fancy-settings/source/index.html",
    "chrome_style": true
  }
}