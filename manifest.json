{
  "manifest_version": 2,

  "name": "HealthTranslator",
  "description": "Recognize medical terms in Web documents and provide definitions, relationships and external references for a better search!",
  "version": "0.1",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "web_accessible_resources": [
    "images/loading.gif"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [ "css/contentscript.css", "css/scoped-health-translator.css" ],
      "js": ["js/libs/jquery.min.js", "js/libs/bootstrap.js", "js/libs/lz-string.min.js", "js/contentscript.js"]
    }
  ],
  "background": {
    "scripts": ["js/libs/jquery.min.js", "js/background.js"],
    "persistent": false
  },
  "options_page": "html/options.html"
}